<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="com.heads.thinking.funnytests.item.editable.ResultSectionEditableItem" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        app:contentPadding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="3dp">

            <EditText
                android:id="@+id/sectionName"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{item.resultSection.name}"
                android:layout_gravity="center"
                android:textColor="?attr/primaryTextColor"
                android:textSize="@dimen/header_text"
                android:hint="@string/section_title"/>

            <EditText
                android:id="@+id/sectionDescription"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{item.resultSection.description}"
                android:layout_gravity="center"
                android:textColor="?attr/primaryTextColor"
                android:textSize="@dimen/main_text"
                android:hint="@string/section_description" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>