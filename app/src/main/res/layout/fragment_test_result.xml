<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <import type="android.view.View" />

        <variable
            name="testResultViewModel"
            type="com.heads.thinking.funnytests.mvvm.test.TestResultViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/resultsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/endTestButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_result" />

        <androidx.cardview.widget.CardView
            android:id="@+id/endTestButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:contentPadding="0dp"
            android:onClick="@{testResultViewModel.finishTest}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/layoutWithImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:background="@color/colorPrimary"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/buttonTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/finish_test"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/header_text" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>